    },
    "contact_postcode": {
      "type": "string"
    },
    "contact_city": {
      "type": "string"
    },
    "contact_phone": {
      "type": "string"
    },
    "contact_time_slot_1_ini": {
      "type": "decimal"
    },
    "contact_time_slot_1_end": {
      "type": "decimal"
    },
    "contact_time_slot_2_ini": {
      "type": "decimal"
