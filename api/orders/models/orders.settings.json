    "contact_time_slot_2_end": {
      "type": "decimal"
    },
    "route_rate": {
      "model": "route-rate"
    },
    "price": {
      "type": "decimal"
    },
    "contact_name": {
      "type": "string"
    },
    "contact_nif": {
      "type": "string"
    },
    "delivery_date": {
      "type": "date"
    },
    "provider_order_number": {
      "type": "string"
